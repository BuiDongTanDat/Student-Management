<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/white"

    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/avtImage"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="100dp">
        <ImageView
            android:id="@+id/avtUser"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/book" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Name of user"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/goUser"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/white"
        android:layout_height="500px">
        <ImageView
            android:id="@+id/userManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/usermanage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="Manage Users"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/goStudent"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/white"
        android:layout_height="500px">
        <ImageView
            android:id="@+id/studentManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/studentmanage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="Manage Student"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>



</LinearLayout>
